+    renderer->UpdateViewport = WIIU_SDL_UpdateViewport;
+    renderer->UpdateClipRect = WIIU_SDL_UpdateClipRect;
+    renderer->RenderClear = WIIU_SDL_RenderClear;
+    renderer->RenderDrawPoints = WIIU_SDL_RenderDrawPoints;
