+static inline void WIIU_TextureCheckWaitRendering(WIIU_RenderData *r, WIIU_TextureData *t)
+{
+    if (t->isRendering) {
+        GX2DrawDone();
+        WIIU_TextureDoneRendering(r);
+        WIIU_FreeRenderData(r);
+    }
+}
