+    sem = (SDL_sem *) SDL_malloc(sizeof(*sem));
+    if (sem) {
+        OSInitSemaphore(&sem->sem, initial_value);
+		OSInitMutex(&sem->mtx);
+		OSInitCond(&sem->cond);
