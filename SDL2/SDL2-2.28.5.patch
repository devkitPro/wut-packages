+    MEMHeapHandle heap = MEMGetBaseHeapHandle(MEM_BASE_HEAP_MEM1);
+    uint32_t size;
+    void *base;
+
+    if (!MEMRecordStateForFrmHeap(heap, FRM_HEAP_STATE_TAG)) {
+        printf("%s: MEMRecordStateForFrmHeap failed\n", __FUNCTION__);
+        return -1;
+    }
