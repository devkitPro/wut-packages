+    base = MEMAllocFromFrmHeapEx(heap, size, 4);
+    if (!base) {
+        printf("%s: MEMAllocFromFrmHeapEx(heap, 0x%X, 4) failed\n", __FUNCTION__, size);
+        return -1;
+    }
+
+    GfxHeap_MEM1 = MEMCreateExpHeapEx(base, size, 0);
+    if (!GfxHeap_MEM1) {
