+	src/video/*.c \
+	src/video/wiiu/*.c \
+	src/video/yuv2rgb/*.c \
+	src/video/dummy/*.c
+
+OBJECTS = $(shell echo $(SOURCES) | sed -e 's,\.c,\.o,g')
+INCLUDE = -I./include
+
+#---------------------------------------------------------------------------------
+# Compile flags
+#---------------------------------------------------------------------------------
+CFLAGS		+=	-O2 $(INCLUDE)
+CXXFLAGS	+=	-O2 $(INCLUDE)
+
