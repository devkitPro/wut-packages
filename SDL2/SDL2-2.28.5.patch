+	@echo INSTALL $(TARGET)
+	@mkdir -p $(PORTLIBS)/lib
+	@mkdir -p $(PORTLIBS)/include/SDL2
+	@cp $(TARGET) $(PORTLIBS)/lib/
+	@cp -f ./include/*.h $(PORTLIBS)/include/SDL2/
+
+clean:
+	@echo CLEAN ...
+	@rm -rf $(OBJECTS) $(OBJECTS:.o=.d) $(TARGET)
+
