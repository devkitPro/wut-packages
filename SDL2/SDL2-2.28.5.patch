+echo "Done!"
+
+# textureShader
+echo "Building textureShader ..."
+./latte-assembler assemble --vsh=textureShader.vsh --psh=textureShader.psh textureShader.gsh
+xxd -i textureShader.gsh > textureShader.inc
+echo "Done!"
